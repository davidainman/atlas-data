{
    "@context": [
        "http://www.w3.org/ns/csvw",
        {
            "@language": "en"
        }
    ],
    "dc:conformsTo": "http://cldf.clld.org/v1.0/terms.rdf#Generic",
    "tables": [
        {
            "dc:conformsTo": "http://cldf.clld.org/v1.0/terms.rdf#LanguageTable",
            "tableSchema": {
                "columns": [
                    {
                        "datatype": {
                            "base": "string",
                            "format": "[a-zA-Z0-9_\\-.]+"
                        },
                        "propertyUrl": "http://cldf.clld.org/v1.0/terms.rdf#id",
                        "required": true,
                        "name": "Glottocode"
                    },
                    {
                        "datatype": "string",
                        "required": false,
                        "name": "ISO639P3code"
                    },
                    {
                        "datatype": "string",
                        "propertyUrl": "http://cldf.clld.org/v1.0/terms.rdf#name",
                        "required": true,
                        "name": "Name"
                    },
                    {
                        "datatype": "string",
                        "required": false,
                        "name": "Family_Name"
                    },
                    {
                        "datatype": "string",
                        "propertyUrl": "http://cldf.clld.org/v1.0/terms.rdf#macroarea",
                        "required": false,
                        "name": "Macroarea"
                    },
                    {
                        "datatype": {
                            "base": "decimal",
                            "minimum": "-90",
                            "maximum": "90"
                        },
                        "propertyUrl": "http://cldf.clld.org/v1.0/terms.rdf#latitude",
                        "required": false,
                        "name": "Latitude"
                    },
                    {
                        "datatype": {
                            "base": "decimal",
                            "minimum": "-180",
                            "maximum": "180"
                        },
                        "propertyUrl": "http://cldf.clld.org/v1.0/terms.rdf#longitude",
                        "required": false,
                        "name": "Longitude"
                    }
                ],
                "primaryKey": [
                    "Glottocode"
                ]
            },
            "url": "languages.csv"
        },
        {
            "tableSchema": {
                "columns": [
                    {
                        "datatype":"string",
                        "propertyUrl": "http://cldf.clld.org/v1.0/terms.rdf#id",
                        "required": true,
                        "name": "ID"
                    },
                    {
                        "datatype": "string",
                        "propertyUrl": "http://cldf.clld.org/v1.0/terms.rdf#languageReference",
                        "required": true,
                        "name": "Glottocode"
                    },
                    {
                        "datatype": "string",
                        "required": true,
                        "name": "Language"
                    },
                    {
                        "datatype": "string",
                        "required": true,
                        "separator": "~",
                        "name": "Forms"
                    },
                    {
                        "datatype": "string",
                        "required": true,
                        "separator": "~",
                        "name": "SG ~ PL"
                    },
                    {
                        "datatype": "string",
                        "required": true,
                        "name": "Meaning"
                    },
                    {
                        "datatype": "string",
                        "required": true,
                        "name": "Semantic_Category"
                    },
                    {
                        "datatype": "string",
                        "required": false,
                        "separator": ";",
                        "name": "Semantic_Subcategory"
                    },
                    {
                        "datatype": {
                            "base": "string",
                            "format": "bipartite|tripartite|\\?"
                        },
                        "required": true,
                        "name": "Bipartite_vs_Tripartite"
                    },
                    {
                        "datatype": {
                            "base": "string",
                            "format": "suppletion|regular"
                        },
                        "required": true,
                        "name": "Alternation_Type"
                    },
                    {
                        "datatype": "string",
                        "required": false,
                        "name": "Handling_Shape",
                        "dc:description": "This column tracks whether suppletive pairs correlate with handling verbs, as claimed in Mithun (2022)."
                    },
                    {
                        "datatype": "string",
                        "required": false,
                        "propertyUrl": "http://cldf.clld.org/v1.0/terms.rdf#comment",
                        "name": "Comment"
                    }
                ],
                 "foreignKeys": [
                    {
                        "columnReference": [
                            "Glottocode"
                        ],
                        "reference": {
                            "resource": "languages.csv",
                            "columnReference": [
                                "Glottocode"
                            ]
                        }
                    }
                ],
                "primaryKey": [
                    "ID"
                ]
            },
            "url": "verbs.csv"
        }
    ]
}